{
  "version": 2,
  "port": 8090,
  "extra_config": {
    "github_com/devopsfaith/krakend-cors": {
      "allow_methods": ["GET","POST","PUT","DELETE"],
      "allow_origins": ["*"],
      "expose_headers": ["Content-Length"],
      "max_age": "12h"
    },
    "sd_providers": {
      "providers": {"dns": true},
      "hosts": [
        {
          "sd": "dns",
          "host": "public-gateway"
        },
        {
          "sd": "dns",
          "host": "account"
        }
      ]
    },
    "github_com/devopsfaith/krakend-gologging": {
      "format": "default",
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "stdout": true,
      "syslog": true
    },
    "github_com/devopsfaith/krakend-logstash": {
      "enabled": true
    }
  },
  "timeout": "1500ms",
  "cache_ttl": "0s",
  "output_encoding": "json",
  "name": "local-gateway",
  "endpoints": [
    {
      "endpoint": "/",
      "description": "This is a public-gateway service",
      "group": "lnr",
      "method": "GET",
      "extra_config": {},
      "output_encoding": "no-op",
      "concurrent_calls": 1,
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "no-op",
          "sd": "dns",
          "host": [
            "public-gateway",
            "account"
          ],
          "disable_host_sanitize": true,
          "is_collection": true,
          "target": "",
          "method": "GET"
        }
      ]
    }
  ]
}
